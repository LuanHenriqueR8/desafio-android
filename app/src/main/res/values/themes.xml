<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PhiTest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#FFFFFF</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="FilledBoxEndIconTint" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="endIconTint">@color/emphasis</item>
    </style>

    <style name="TransactionItemTitle">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TransactionItemName" parent="TransactionItemTitle">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TransactionItemValue" parent="TransactionItemTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BackButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">0dp</item>
        <item name="rippleColor">@color/emphasis</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="iconTint">@null</item>
        <item name="icon">@drawable/ic_keyboard_arrow_left</item>
    </style>

    <style name="OperationButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">0dp</item>
        <item name="rippleColor">@android:color/white</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/emphasis</item>
        <item name="android:elevation">0dp</item>
    </style>
</resources>